{% extends 'base.html.twig' %}

{% block title %}{{ office.businessName }}{% endblock %}

{% block body %}
<div class="p-8 font-sans">
<div class="sticky top-0 z-50 bg-white flex items-center justify-between mt-0 py-4 border-b border-gray-200">

    {% set back_route = is_granted('ROLE_CLIENT') ? 'app_office_list' : (is_granted('ROLE_PRO') ? 'pro_home' : null) %}

    {% if back_route %}
        <a href="{{ path(back_route) }}" class="flex items-center text-blue-700 font-semibold hover:underline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back
        </a>
        <img src="{{ asset('uploads/BloomCare.png') }}" alt="Logo" class="mx-auto h-10">
    {% endif %}
</div>

    <h1 class="text-2xl font-bold text-purple-700 mb-4">{{ office.businessName }}</h1>

    <img src="{{ office.profilePhotoLink }}" alt="Photo de {{ office.businessName }}" class="rounded-xl w-full h-64 object-cover mb-6">

    <p><strong>SIRET :</strong> {{ office.siret }}</p>
    <p><strong>T√©l√©phone :</strong> {{ office.Officephone }}</p>
    <p><strong>Adresse :</strong> {{ office.Officeaddress }}</p>
    <p><strong>Description :</strong> {{ office.description }}</p>

    {% if office.personalSiteLink %}
        <p class="mt-2">
            <a href="{{ office.personalSiteLink }}" target="_blank" class="text-purple-600 hover:underline">üåê Site personnel</a>
        </p>
    {% endif %}

    <div class="mt-6">
        <a href="{{ path('app_review_new', {'id': office.id}) }}" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition">
            ‚úçÔ∏è Laisser un avis
        </a>
    </div>
</div>
{% endblock %}
