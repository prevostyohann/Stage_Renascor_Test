{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen w-full bg-white flex flex-col justify-center px-6 py-8 sm:px-8">
    <div class="w-full h-full">
    {% for message in app.flashes('success') %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
        {{ message }}
    </div>
{% endfor %}
        <h1 class="text-3xl font-bold text-center text-gray-900 mb-6">Connexion</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-4">
                <label for="email" class="block text-gray-700">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>

            <div class="mb-4">
                <label for="password" class="block text-gray-700">Mot de passe</label>
                <input type="password" name="_password" id="password" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>

            <div class="flex items-center justify-between mb-4">
                <div class="form-check">
                    <input type="checkbox" name="_remember_me" class="form-check-input">
                    <label class="form-check-label text-gray-700">Se souvenir de moi</label>
                </div>
                <a href="#" class="text-purple-500 text-sm">Mot de passe oubli√© ?</a>
            </div>

            <button type="submit" class="w-full bg-purple-600 text-white hover:bg-purple-700 
 font-bold py-3 px-4 rounded-lg transition duration-200">Connexion</button>
        </form>
    </div>
</div>
{% endblock %}