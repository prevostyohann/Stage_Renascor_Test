{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="grid grid-cols-1 gap-4">
        <div class="flex items-center justify-between mt-6">
    {% set back_route = is_granted('ROLE_CLIENT') ? 'client_home' : (is_granted('ROLE_PRO') ? 'pro_home' : null) %}

    {% if back_route %}
        <a href="{{ path(back_route) }}" class="flex items-center text-blue-700 font-semibold hover:underline">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back
        </a>
    {% endif %}
</div>

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white rounded-lg shadow">
    <h1 class="text-2xl font-bold mb-6">Mon profil</h1>

    <ul class="space-y-2">
        <li><strong>Email :</strong> {{ user.email }}</li>
        <li><strong>Username :</strong> {{ user.username }}</li>
        <li><strong>Nom :</strong> {{ user.lastName }}</li>
        <li><strong>Prénom :</strong> {{ user.firstName }}</li>
        <li><strong>Adresse :</strong> {{ user.address }}</li>
        <li><strong>Code postal :</strong> {{ user.postalCode }}</li>
        <li><strong>Ville :</strong> {{ user.city }}</li>
        <li><strong>Téléphone :</strong> {{ user.phoneNumber }}</li>
        <li><strong>Date de naissance :</strong> {{ user.birthDate ? user.birthDate|date('d/m/Y') : 'N/A' }}</li>
    </ul>

    <a href="{{ path('profil_edit') }}" class="inline-block mt-6 bg-teal-500 text-white px-4 py-2 rounded hover:bg-teal-600">
        Modifier mon profil
    </a>
</div>
{% endblock %}
