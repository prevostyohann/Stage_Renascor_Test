{% extends 'base.html.twig' %}

{% block title %}Settings{% endblock %}

{% block body %}
    <div class="sticky top-0 z-50 bg-white flex items-center justify-between mt-0 py-4 border-b border-gray-200">
        {% set back_route = is_granted('ROLE_CLIENT') ? 'client_home' : (is_granted('ROLE_PRO') ? 'pro_home' : null) %}

        {% if back_route %}
            <a href="{{ path(back_route) }}" class="flex items-center text-blue-700 font-semibold hover:underline ml-4">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
                Retour
            </a>
            <img src="{{ asset('uploads/BloomCare.png') }}" alt="Logo" class="mx-auto h-10">
        {% endif %}
    </div>

    <div class="max-w-md mx-auto px-4 py-6 font-sans">
        <h2 class="flex justify-center border border-purple-500 rounded-lg font-bold text-lg text-purple-700 mb-8 px-4 py-2">⚙️ Paramètres</h2>

        <div class="border-2 border-purple-700 rounded-lg overflow-hidden divide-y divide-gray-200 shadow">
            <a href="#" class="flex justify-between items-center px-6 py-4 text-gray-800 hover:bg-purple-50">
                <span>Langue</span><span class="text-sm text-gray-500">Anglais</span>
            </a>
            <a href="#" class="block px-6 py-4 text-gray-800 hover:bg-purple-50">
                Préférences de notification
            </a>
            <a href="#" class="block px-6 py-4 text-gray-800 hover:bg-purple-50">
                Informations de paiement
            </a>
            <a href="#" class="block px-6 py-4 text-gray-800 hover:bg-purple-50">
                Politique de confidentialité
            </a>
        </div>

        <a href="{{ path('app_logout') }}" class="text-red-500 hover:underline block  font-bold text-center mt-6">
            Déconnexion
        </a>
    </div>
{% endblock %}
